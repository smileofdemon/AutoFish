<Window x:Class="AutoFish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFish"
        mc:Ignorable="d"
        Title="AutoFish v2.1" Height="110" Width="410" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Button Name="btnStart" Content="Поехали" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Click="BtnStart_Click" Height="20" Width="200"/>
        <Button Name="btnStop" Content="Стоп" HorizontalAlignment="Left" Margin="190,35,0,0" VerticalAlignment="Top" Click="BtnStop_Click" Height="20" Width="200"/>
        <Label Content="Потратить ОР" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBoxTotal" HorizontalAlignment="Left" Margin="10,37,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <Button Name="btnSetAll" Content="Все" HorizontalAlignment="Left" Margin="73,35,0,0" VerticalAlignment="Top" Click="BtnSetAll_Click" Height="20" Width="112"/>
        <ProgressBar Name="progressBar" HorizontalAlignment="Center" Height="34" Margin="0,60,0,0" VerticalAlignment="Top" Width="410" Minimum="0"/>
    </Grid>
</Window>
